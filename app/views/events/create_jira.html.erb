<% if Snorby::Worker.running? %>

	<%= snorby_box("JIRA Event Information", false) do %>

		<div id='snorbybox-content' class=''>

			<%= form_tag Snorby::CONFIG[:baseuri] + '/jira', :class => 'jira-event-information validate' do %>

			<div class='grid_17' style='disply:block;'>

				<%= hidden_field_tag :sid, params[:sid] %>

				<%= hidden_field_tag :cid, params[:cid] %>
				
				<%= hidden_field_tag 'email[user_id]', @current_user.id %>

        <br />
        <div class="clear"></div>

                <p>

                    <div class='grid_10 alpha' style='margin-bottom:7px;'>
                        <%= label_tag 'Jira Ticket Subject:' %><br />
                        <%= text_field_tag 'jira[subject]', "Authorized Use Policy Infraction - #{@event.ip.ip_src} - Snorby", :class => 'input-small required', :style => 'width:640px;' %><br />
                    </div>

                </p>

        <br />

        <div class="clear"></div>

                <p>

                    <div class='grid_10 alpha' style='margin-bottom:7px;'>
                        <%= label_tag 'Jira Project Queue:' %><br />
                        <%= text_field_tag 'jira[project]', "IM", :class => 'input-small required', :style => 'width:640px;' %><br />
                    </div>

                </p>

        <br />
        <div class="clear"></div>

				<p>
					<div class='grid_10 alpha' style='margin-bottom:20px;'>
						<%= label_tag 'Jira Description:' %><br />
            <%= text_area_tag 'jira[description]', nil, :style => 'width:645px;height:150px', :placeholder => "Enter JIRA Description here." %><br />
					</div>
				</p>

			</div>
			
			<br />

			<% end %>

      <div class="clear"></div>

      <%= snorby_box_footer do %>
        <%= form_actions do %>
          <%= button "Jira Event Information", :class => 'success jira-event-information' %>
          <%= button "Cancel", :class => 'warning cancel-snorbybox' %>
        <% end %>
      <% end %>

		</div>

	<% end %>

<% else %>

	<%= snorby_box("The Snorby Worker Is Not Running!") do %>
		
		<div id='note-box' class='error'>
			<%= image_tag('icons/note-icon-white.png') %>
			The Snorby worker is not currently running. It's imperative you start the worker immediately!
			All backend calculations are performed asynchronously using the Snorby Worker.
		</div>
		
	<% end %>

<% end %>
